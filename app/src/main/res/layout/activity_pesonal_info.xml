<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pesonal_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shah.project.Pesonal_Info"
    android:background="#008000">


<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="100dp"
    android:layout_height="80dp"
    android:id="@+id/profile"
    android:src="@drawable/log"
    android:layout_centerHorizontal="true"
    app:civ_border_color="#FFFFFF"
    app:civ_border_width="2dp"
    android:layout_alignParentTop="true"
    />

<CheckBox
    android:text="Female"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/checkBox3"
    android:layout_alignBaseline="@+id/checkBox2"
    android:layout_alignBottom="@+id/checkBox2"
    android:layout_toEndOf="@+id/button" />

<Button
    android:text="OK"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/button2"
    android:layout_above="@+id/button"
    android:layout_alignStart="@+id/editText2" />

<Button
    android:text="Home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/button"
    android:layout_alignParentBottom="true"
    android:layout_alignStart="@+id/button2" />

<CheckBox
    android:text="Male"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/checkBox2"
    android:layout_above="@+id/button2"
    android:layout_alignStart="@+id/button2"
    android:textColor="@android:color/black" />

    <TextView
    android:text="Father Name:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvfname"
    android:background="#e9e0e3"
    android:layout_marginTop="21dp"
    android:layout_below="@+id/editText"
    android:layout_alignStart="@+id/tvphone" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:id="@+id/editText"
    android:background="#C02750"
    android:layout_alignBottom="@+id/tvname"
    android:layout_alignStart="@+id/editText2" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:background="#C02750"
    android:id="@+id/editText2"
    android:layout_alignTop="@+id/tvfname"
    android:layout_alignStart="@+id/editText3" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:background="#C02750"
    android:id="@+id/editText3"
    android:layout_alignBottom="@+id/tvphone"
    android:layout_alignStart="@+id/profile" />

<TextView
    android:text="Phone Number:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#e9e0e3"
    android:id="@+id/tvphone"
    android:layout_below="@+id/editText2"
    android:layout_alignParentStart="true"
    android:layout_marginTop="27dp" />

<TextView
    android:text="Email:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvemail"
    android:background="#e9e0e3"
    android:layout_alignTop="@+id/editText4"
    android:layout_alignStart="@+id/tvname" />

    <TextView
    android:text="Address:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvadres"
    android:background="#e9e0e3"
    android:layout_alignTop="@+id/editText11"
    android:layout_alignEnd="@+id/tvdob" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPostalAddress"
    android:ems="10"
    android:background="#C02750"
    android:id="@+id/editText10"
    android:layout_marginBottom="18dp"
    android:layout_above="@+id/checkBox3"
    android:layout_alignStart="@+id/checkBox2" />

<TextView
    android:text="Gender:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvgender"
    android:background="#e9e0e3"
    android:layout_alignBaseline="@+id/checkBox2"
    android:layout_alignBottom="@+id/checkBox2"
    android:layout_alignStart="@+id/tvadres" />

<TextView
    android:text="User Name:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvname"
    android:background="#e9e0e3"
    android:layout_marginTop="24dp"
    android:layout_below="@+id/profile"
    android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="#C02750"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="Date Of Birth:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#e9e0e3"
        android:id="@+id/tvdob"
        android:layout_alignTop="@+id/editText6"
        android:textSize="14sp"
        android:layout_alignEnd="@+id/tvphone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:background="#C02750"
        android:id="@+id/editText11"
        android:layout_above="@+id/editText10"
        android:layout_alignStart="@+id/editText10" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textNoSuggestions|date"
    android:ems="10"
    android:background="#C02750"
    android:id="@+id/editText6"
        android:layout_above="@+id/editText11"
        android:layout_alignStart="@+id/editText11"
        android:layout_marginBottom="12dp" />

</RelativeLayout>

